$(document).ready(function() { 
$('a[name=modal]').click(function(e) {
 var top = $(this).offset().top
 var id = $(this).attr('href');
 var maskHeight = $(document).height();
 var maskWidth = $(window).width();
 $('#mask').css({
 'width':maskWidth,
 'height':maskHeight
 });
 $('#mask').css('opacity', 0).show();
 $('#mask').fadeTo(1000,0.6); //1000 - плавность появления маски, 0.6 - степень прозрачности маски
 var winH = $(window).height();
 var winW = $(window).width();
 $(id).css('top', winH/2-$(id).height()/2);
 $(id).css('left', winW/2-$(id).width()/2);
 $(id).fadeIn(1000);
 });

 $('.window .close').click(function (e) {
 e.preventDefault();
 $('#mask').fadeOut(1000); //1000 - плавность закрытия маски
  $('.formError').hide();
 $('.window').fadeOut(500); //500 - плавность закрытия окна
 });
 
$(window).scroll(function() {
 $('.formError').hide();
});

 $('#mask').click(function () {
 $(this).fadeOut(1000);
 $('.formError').hide();
 $('.window').fadeOut(500);
 });
 
 });